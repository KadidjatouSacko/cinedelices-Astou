</head>
<body>
    <header>

        <nav>
            <section class="navbar-header">
                <img src="../public/assets/img/logo.png" alt="logo">
                <h2> Contact</h2>
                <a href="#">Connexion</a>
    
            </section>
    
            <section class="navbar">
                <ul>
                    <li> <a href="/recettes"> Recettes</a></li>
                    <li> <a href="/contact"> contact</a></li>
                    <li> <a href="/films"> Filmographie</a></li>
                </ul>
            </section>
        </nav>
    </header>

<link rel="stylesheet" href="/assets/css/registration.css">
<main>
    <section class="registration-form">
        <h2>Inscription</h2>
        <section class="form">
            <% if (locals.error) { %>
                <div class="error-message" style="color: red; margin-bottom: 15px;">
                    <%= error %>
                </div>
            <% } %>
            
            <form action="/inscription" method="POST">
                <label for="lastname">Nom <strong>*</strong>:</label>
                <input type="text" id="lastname" name="lastname" value="<%= locals.formData ? formData.lastname : '' %>" required>
            
                <label for="firstname">Prénom <strong>*</strong>:</label>
                <input type="text" id="firstname" name="firstname" value="<%= locals.formData ? formData.firstname : '' %>" required>
            
                <label for="pseudo">Pseudo <strong>*</strong>:</label>
                <input type="text" id="pseudo" name="pseudo" value="<%= locals.formData ? formData.pseudo : '' %>" required>
            
                <label for="email">Adresse mail <strong>*</strong>:</label>
                <input type="email" id="email" name="email" value="<%= locals.formData ? formData.email : '' %>" required>
            
                <label for="password">Mot de passe <strong>*</strong>:</label>
                <input type="password" id="password" name="password" required>
            
                <label for="confirm_password">Confirmer le mot de passe <strong>*</strong>:</label>
                <input type="password" id="confirm_password" name="confirm_password" required>

                <div class="choice-button"> 
                    <button><a href="/recettes" class="continue">Continuer sans compte</a> </button>
                    <button type="submit">S'inscrire</button>
                </div>
                <span class="connexion"> 
                    <p>Vous avez déja un compte</p>
                    <a href="/connexion">
                        <p class="blue">Connectez-vous</p>
                    </a>
                </span>
            </form>
        </section>
    </section>
</main>

<footer>

    <a href="/legal-notices"> Mentions légales</a>
    <a href="/contact"> Contact</a>
</footer>
</body>
</html>
