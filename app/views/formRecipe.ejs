<%- include('./partials/header') %>

    <h2>Proposer une Recette</h2>

    <form action="recipes-form" method="POST" enctype="multipart/form-data">

        <label for="name">Nom de la recette :</label>
        <input type="text" id="nom" name="nom" required>
<br>
        <form>
            <label>
                <input type="radio" name="category" value="starter"> Entrée
            </label>
            <label>
                <input type="radio" name="category" value="maincourse"> Plat
            </label>
            <label>
                <input type="radio" name="category" value="dessert"> Dessert
            </label>
        </form>
<br>
        <label for="video">Lien vers l'extrait du film (optionnel):</label>
        <input type="url" id="video" name="video" placeholder="https://www.youtube.com/watch?v=nsIpBTl0ab4&ab_channel=ImaginationInstitute">
<br>

        <label for="tools">Ustensiles nécessaires (séparés par une virgule) :</label>
        <textarea id="tools" name="tools" rows="2" placeholder="Ex : Poêle, Mixeur, Sabre laser..."></textarea>

<br>
        <label for="ingredients">Ingrédients nécessaires (séparés par une virgule) :</label>
        <textarea id="ingredients" name="ingredients" rows="3" required placeholder="Ex : Tomates, Oeufs, Bave de crapaud..."></textarea>
        <br><br>
<br>
        <label for="description">Description de la recette :</label>
        <textarea id="description" name="description" rows="4" required placeholder="Décrivez la recette..."></textarea>
        
<br>       
        <!-- Stephanie ici la instruction a geré) -->
        <label for="instructions">Instructions :</label>
        <textarea id="instructions" name="instructions" rows="5" required placeholder="Décrivez les étapes de préparation..."></textarea>
<br>
        <label for="time">Temps de préparation (en minutes) :</label>
        <input type="number" id="time" name="time" min="1" required>
<br>
        <label for="image">Image de la recette (optionnel) :</label>
        <input type="file" id="image" name="image">
<br>

        <button type="submit">Envoyer la Recette</button>
<br>
    </form>

</body>
</html>
