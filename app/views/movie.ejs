<%- include('partial/header') %>

<link rel="stylesheet" href="/assets/css/movies.css">
<main>

    <h2><%= movie.title %></h2>

    <section class="films">
        <article class="film">
            <img src="/assets/img/<%= movie.title.toLowerCase() %>.jpg" alt="<%= movie.title %>">
            <ul>
                <li><strong>Réalisateur :</strong> <span><%= movie.director %></span></li>
                <li><strong>Année :</strong> <span><%= movie.year %></span></li>
                <li><strong>Genre :</strong> <span><%= movie.genre %></span></li>
            </ul>
            <button><a href="/films"> Retourner à la filmographie</a></button>
        </article>

    </section>
</main>

<%- include('partial/footer') %>
</body>
</html>
